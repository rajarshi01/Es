<html>
<head>
  <meta charset="UTF-8" />
  <link rel="stylesheet" type="text/css" href="assets/demo.css" />
  <link rel="stylesheet" type="text/css" href="assets/newstyle.css" />
  <link rel="stylesheet" type="text/css" href="assets/animate-custom.css" />
  <link rel="stylesheet" type="text/css" href="assets/style.css" />
  <style type="text/css">
      h1{text-align:center;font-size:54px;font-family:Times,serif;font-variant:small-caps;color:#330066;}
  </style>
</head>
<body>


<div id="container_demo" >
  <a class="hiddenanchor" id="tologin"></a>
  <div id="wrapper">
    <div id="login" class="animate form">
      <%= form_for(@item) do |f| %>
          <% if @item.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

                <ul>
                  <% @item.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="field">
            <%= f.label :title %><br />
            <%= f.text_field :title %>
          </div>
          <div class="field">
            <%= f.label :description %><br />
            <%= f.text_area :description, :rows => 5 %>
          </div>
          <div class="field">
            <%= f.label :price %><br />
            <%= f.text_field :price %>
          </div>
          <div class="field">
            <%= f.label :image %><br />
            <%= f.text_field :image %>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
      <% end %>

    </div>
  </div>
</div>
</body>
</html>